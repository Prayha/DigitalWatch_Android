<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/setting_ImageButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/day_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:textSize="160sp" />

        <TextView
            android:id="@+id/day2_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="100sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64sp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="64sp"
                android:paddingRight="64sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ampm_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="64sp"
                    android:gravity="right"
                    android:text=""
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@color/white"
                    android:textSize="240sp" />

                <TextView
                    android:id="@+id/time_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingLeft="72sp"
                    android:gravity="center"
                    android:text=""
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:textSize="300sp" />

                <TextView
                    android:id="@+id/second_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingLeft="32sp"
                    android:paddingRight="64sp"
                    android:gravity="left"
                    android:text=""
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:textSize="300sp" />

            </LinearLayout>

            <!-- test ca-app-pub-3940256099942544/6300978111 -->
            <!-- real ca-app-pub-2721211392199032/3542284879 -->
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>